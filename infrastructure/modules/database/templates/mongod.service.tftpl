[Unit]
Description=Mongod Service

[Service]
Type=forking
User=root
Group=root
ExecStart=/bin/numactl --interleave=all /bin/mongod -f /tmp/mongod.conf
# (file size)
LimitFSIZE=infinity
# (cpu time)
LimitCPU=infinity
# (virtual memory size)
LimitAS=infinity
# (locked-in-memory size)
LimitMEMLOCK=infinity
# (open files)
LimitNOFILE=64000
# (processes/threads)
LimitNPROC=64000

[Install]
WantedBy=multi-user.target